// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
}

// Add seed configuration
// Run: npx prisma db seed


model User {
  id            String    @id @default(cuid())
  name          String?
  email         String?   @unique
  image         String?
  role          Role?     @default(GHOST)
  password      String?
  phone         String?
  isBlocked     Boolean   @default(false)
  accounts      Account[]
  sessions      Session[]
  orders        Order[]
  addresses     Address[]
  wishlist      WishlistItem[]
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt

  @@map("users")
}
enum Role {
  CUSTOMER
  ADMIN
  GHOST
}

model Account {
  id                 String  @id @default(cuid())
  userId             String
  type               String
  provider           String
  providerAccountId  String
  refresh_token      String?  @db.Text
  access_token       String?  @db.Text
  expires_at         Int?
  token_type         String?
  scope              String?
  id_token           String?  @db.Text
  session_state      String?

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
  @@map("accounts")
}

model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique
  userId       String
  expires      DateTime
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@map("sessions")
}

model VerificationToken {
  identifier String
  token      String   @unique
  expires    DateTime

  @@unique([identifier, token])
  @@map("verification_tokens")
}

model PasswordResetToken {
  id        String   @id @default(cuid())
  email     String
  token     String   @unique
  expires   DateTime

  @@unique([email, token])
  @@map("password_reset_tokens")
}

// PrintPosition Enum
enum PrintPosition {
  BACK
  FRONT
  BOTH
}

// Category Model - Organizes products by anime series or theme
model Category {
  id          String    @id @default(cuid())
  name        String
  slug        String    @unique
  description String?
  imageURL    String?
  products    Product[]
  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt

  @@map("categories")
}

// Product Model - Represents a hoodie design
model Product {
  id            String          @id @default(cuid())
  name          String
  slug          String
  description   String?
  basePrice     Decimal         @db.Decimal(10, 2)
  printPosition PrintPosition   @default(BOTH)
  category      Category        @relation(fields: [categoryId], references: [id])
  categoryId    String
  colors         ProductColor[]
  sizeStocks     ProductSizeStock[]
  variants       Variant[] // Kept for backward compatibility
  wishlist       WishlistItem[]
  createdAt      DateTime        @default(now())
  updatedAt      DateTime        @updatedAt

  @@unique([categoryId, slug])
  @@map("products")
}

// ProductColor Model - Colors with images for a product
model ProductColor {
  id            String   @id @default(cuid())
  product       Product  @relation(fields: [productId], references: [id], onDelete: Cascade)
  productId     String
  color         String   // e.g., "Black", "White", "Navy"
  frontImageURL String?
  backImageURL  String?
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt

  @@unique([productId, color])
  @@map("product_colors")
}

// ProductSizeStock Model - Size availability per product
model ProductSizeStock {
  id          String   @id @default(cuid())
  product     Product  @relation(fields: [productId], references: [id], onDelete: Cascade)
  productId   String
  size        String   // e.g., "XS", "S", "M", "L", "XL", "XXL"
  stockQty    Int      @default(0)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  @@unique([productId, size])
  @@map("product_size_stocks")
}

// Variant Model - Legacy color/size combinations (kept for backward compatibility)
// New products should use ProductColor + ProductSizeStock
model Variant {
  id           String   @id @default(cuid())
  product      Product  @relation(fields: [productId], references: [id], onDelete: Cascade)
  productId    String
  color        String
  size         String
  price        Decimal  @db.Decimal(10, 2)
  stockQty     Int      @default(0)
  frontImageURL String?
  backImageURL  String?
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt

  @@unique([productId, color, size])
  @@map("variants")
}

// Order Status Enum
enum OrderStatus {
  PENDING
  PROCESSING
  SHIPPED
  DELIVERED
  CANCELLED
  REFUNDED
}

// Discount Type Enum
enum DiscountType {
  PERCENTAGE
  FIXED
}

// Order Model - Stores completed orders
model Order {
  id              String      @id @default(cuid())
  orderNumber     String      @unique
  userId          String?
  user            User?       @relation(fields: [userId], references: [id], onDelete: SetNull)

  // Contact info (stored for guest checkout and records)
  email           String
  phone           String?

  // Shipping address
  shippingName    String
  shippingAddress String
  shippingCity    String
  shippingPostalCode String
  shippingCountry String

  // Pricing
  subtotal        Decimal     @db.Decimal(10, 2)
  shippingCost   Decimal     @db.Decimal(10, 2) @default(0)
  discountAmount Decimal     @db.Decimal(10, 2) @default(0)
  totalPrice     Decimal     @db.Decimal(10, 2)

  // Payment (pay-on-delivery specific)
  paymentMethod   String      @default("pay_on_delivery")
  paymentStatus   String      @default("pending")

  // Order status
  status          OrderStatus @default(PENDING)
  trackingNumber  String?
  notes           String?     @db.Text
  adminNotes      String?     @db.Text

  // Coupon applied
  couponId        String?
  coupon          Coupon?     @relation(fields: [couponId], references: [id])
  couponCode      String?

  // Relations
  items           OrderItem[]

  // Timestamps
  placedAt        DateTime    @default(now())
  updatedAt       DateTime    @updatedAt
  shippedAt       DateTime?
  deliveredAt     DateTime?

  @@index([userId])
  @@index([email])
  @@index([orderNumber])
  @@map("orders")
}

// Order Item Model - Individual items in an order
model OrderItem {
  id          String   @id @default(cuid())
  orderId     String
  order       Order    @relation(fields: [orderId], references: [id], onDelete: Cascade)

  // Product details (stored at time of purchase)
  productId   String
  variantId   String
  name        String
  color       String
  size        String
  printPosition String

  // Pricing at time of purchase
  unitPrice   Decimal  @db.Decimal(10, 2)
  quantity    Int
  totalPrice  Decimal  @db.Decimal(10, 2)

  // Timestamps
  createdAt   DateTime @default(now())

  @@index([orderId])
  @@map("order_items")
}

// Coupon Model - Discount codes
model Coupon {
  id          String       @id @default(cuid())
  code        String       @unique
  description String?
  type        DiscountType
  value       Decimal      @db.Decimal(10, 2)

  // Constraints
  minOrderAmount Decimal?  @db.Decimal(10, 2)
  maxUses        Int?
  maxUsesPerUser Int?      @default(1)

  // Validity
  startsAt    DateTime?
  expiresAt   DateTime?
  active      Boolean     @default(true)
  usedCount   Int         @default(0)

  // Relations
  orders      Order[]

  // Timestamps
  createdAt   DateTime    @default(now())
  updatedAt   DateTime    @updatedAt

  @@index([code])
  @@index([active])
  @@map("coupons")
}

// Address Model - User shipping addresses
model Address {
  id              String   @id @default(cuid())
  userId          String
  user            User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  
  // Address details
  name            String   // e.g., "Home", "Work"
  recipientName   String
  phone           String
  address         String
  city            String
  postalCode      String
  country         String
  isDefault       Boolean  @default(false)
  
  // Timestamps
  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt
  
  @@index([userId])
  @@map("addresses")
}

// Wishlist Model - User saved products
model WishlistItem {
  id          String   @id @default(cuid())
  userId      String
  user        User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  productId   String
  product     Product  @relation(fields: [productId], references: [id], onDelete: Cascade)
  
  createdAt   DateTime @default(now())
  
  @@unique([userId, productId])
  @@index([userId])
  @@map("wishlist_items")
}
// Contact Message Model - Stores contact form submissions
model ContactMessage {
  id          String   @id @default(cuid())
  
  // User info (optional - guests can also send messages)
  name        String
  email       String
  
  // Message details
  subject     String
  message     String   @db.Text
  
  // Status for admin tracking
  status      ContactStatus @default(NEW)
  reply       String?   @db.Text
  repliedAt   DateTime?
  
  // Admin who replied
  repliedBy   String?
  
  // Timestamps
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  
  @@index([email])
  @@index([status])
  @@map("contact_messages")
}

enum ContactStatus {
  NEW
  READ
  REPLIED
  CLOSED
}
